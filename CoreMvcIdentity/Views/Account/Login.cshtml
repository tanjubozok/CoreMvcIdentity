@model LoginModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Login</h1>
<hr />
<div class="row">

    <div class="col-md-6 offset-md-3">

        <form asp-controller="Account" asp-action="Login" method="post">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="Email" class="orm-label"></label>
                <input type="text" asp-for="Email" value="@Model.Email" class="form-control" placeholder="E-posta Adresi" required/>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="orm-label"></label>
                <input type="password" asp-for="Password" class="form-control" placeholder="Şifre" required/>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-success">Submit</button>

        </form>
    </div>
</div>