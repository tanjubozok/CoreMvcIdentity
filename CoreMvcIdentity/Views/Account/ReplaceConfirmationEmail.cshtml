@model ConfirmationEmail

@{
    ViewData["Title"] = "ReplaceConfirmationEmail";
    Layout = "~/Views/Shared/_LayoutAccount.cshtml";
}

<h1 class="mt-3">Replace Confirmation Email</h1>
<hr />
<div class="row">

    <div class="col-md-6 offset-md-3">
        <div class="alert alert-info">
            <p>
                Giriş yapabilmeniz için kayıtlı e-posta adresinize gelen onaylama linkini onaylayınız.<br />
                Onaylama linkini e-posta adresine göndereceğiz.
            </p>
        </div>
        <form asp-controller="Account" asp-action="ReplaceConfirmationEmail" method="post">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="EmailAddress" class="form-label"></label>
                <input type="email" asp-for="EmailAddress" class="form-control" placeholder="E-posta Adresi" required />
                <span asp-validation-for="EmailAddress" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-success">Submit</button>

        </form>

    </div>
</div>
