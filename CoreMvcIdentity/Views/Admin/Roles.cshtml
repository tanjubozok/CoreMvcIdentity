@model List<AppRole>

@{
    ViewData["Title"] = "Roles";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1 class="mt-3 mb-3">Roles</h1>

<p>
    <a asp-controller="Admin" asp-action="RoleCreate" class="btn btn-success">Add Role</a>
</p>

@if (Model.Count > 0)
{
    <div class="table-responsive">
        <table class="table table-striped table-hover table-bordered border-success">
            <caption>List of Role</caption>
            <thead class="bg-dark text-white">
                <tr>
                    <th scope="col">#Id</th>
                    <th scope="col">Rol Adı</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th>@item.Id</th>
                        <td>@item.Name</td>
                        <td>
                            <a asp-controller="Admin" asp-action="RoleEdit" asp-route-id="@item.Id" class="btn btn-warning">Edit</a>
                            <a asp-controller="Admin" asp-action="RoleDelete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-primary d-flex align-items-center" role="alert">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-exclamation-triangle-fill flex-shrink-0 me-2" viewBox="0 0 16 16" role="img" aria-label="Warning:">
            <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z" />
        </svg>
        <div>
            Rol bulunamadı.
        </div>
    </div>
}


