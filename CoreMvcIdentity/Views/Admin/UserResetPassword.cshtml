@model ResetPasswordByAdminReset

@{
    ViewData["Title"] = "User Reset Password";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1 class="mt-3">User Reset Password</h1>
<hr />
<div class="row">

    <form asp-controller="Admin" asp-action="UserResetPassword" method="post">

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="UserId" />

        <div class="mb-3">
            <label asp-for="NewPassword" class="form-label"></label>
            <input type="text" asp-for="NewPassword" class="form-control" placeholder="Yeni şifre" required />
            <span asp-validation-for="NewPassword" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-success">Submit</button>
    </form>

</div>

