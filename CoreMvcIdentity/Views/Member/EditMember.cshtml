@model EditMemberModel
@{
    ViewData["Title"] = "Edit Member";
    Layout = "~/Views/Shared/_LayoutMember.cshtml";
}

<h1 class="mt-3">Edit Member</h1>
<hr />
<div class="row mt-3">

    <form asp-controller="Member" asp-action="EditMember" method="post" enctype="multipart/form-data">

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label asp-for="UserName" class="form-label"></label>
            <input type="text" asp-for="UserName" class="form-control" placeholder="Kullanıcı Adı" required />
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Email" class="form-label"></label>
            <input type="email" asp-for="Email" class="form-control" placeholder="E-posta Adresi" required />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Phone" class="form-label"></label>
            <input type="text" asp-for="Phone" class="form-control" placeholder="Telefon Numarası" />
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="City" class="form-label"></label>
            <input type="text" asp-for="City" class="form-control" placeholder="Şehir" />
            <span asp-validation-for="City" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="BirthDay" class="form-label"></label>
            <input asp-for="BirthDay" class="form-control" />
            <span asp-validation-for="BirthDay" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Gender" class="form-label"></label>
            <select asp-for="Gender" class="form-select" asp-items="@ViewBag.Gender"></select>
            <span asp-validation-for="Gender" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label class="form-label">Profil Resimi</label>
            <input class="form-control" type="file" name="userPicture" />
        </div>
        <div class="mt-3">
            <button type="submit" class="btn btn-success">Submit</button>
        </div>
    </form>

</div>